{
    "version": 2,
    "builds": [
        { "src": "api/index.php", "use": "vercel-php@0.6.2" },
        { "src": "public/**/*", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie",
        "CACHE_DRIVER": "array",
        "VIEW_COMPILED_PATH": "/tmp"
    }
}